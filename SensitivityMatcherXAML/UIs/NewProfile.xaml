<Window
    x:Class="SensitivityMatcherXAML.UIs.NewProfile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SensitivityMatcherXAML.UIs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="New Profile"
    Width="355"
    Height="105"
    Background="Gray"
    Icon="/Sensitivity Matcher;component/shell32_16739.ico"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <StackPanel>
        <Label Margin="15,0,0,0">Enter your Profilename:</Label>
        <TextBox
            x:Name="tbNewProfileName"
            Margin="20,0"
            Text="{Binding Path=ProfileName}" />
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                x:Name="btnOk"
                Width="150"
                Margin="0,5,5,0"
                Click="BtnOk_Click">
                OK
            </Button>

            <Button
                x:Name="btnCancel"
                Width="150"
                Margin="5,5,0,0"
                Click="BtnCancel_Click">
                Cancel
            </Button>
        </StackPanel>
    </StackPanel>

</Window>
